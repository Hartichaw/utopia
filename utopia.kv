#:kivy 1.11.1
UtopiaGame:
<Cafeteria>
    text: "Food"
    on_press: root.parent.parent.top_bar.add_food()
<Well>
    text: "Water"
    on_press: root.parent.parent.top_bar.add_water()
<Generator>
    text: "Magic"
    on_press: root.parent.parent.top_bar.add_magic()
    
<TopBar@BoxLayout>
    size_hint: 1, .1
    orientation: 'horizontal'
    food_lbl: Food
    water_lbl: Water
    magic_lbl: Magic
    
    Label:
        id: Food
        text: "Food = 0"
    Label:
        id: Water
        text: "Water = 0"
    Label:
        id: Magic
        text: "Magic = 0"
        
<GameArea@GridLayout>
    cols: 4
    
<UtopiaGame@BoxLayout>:  
    orientation: 'vertical'
    top_bar:top_bar_id
    game_area:game_area_id
    
    TopBar:
        id: top_bar_id
    GameArea:
        id: game_area_id
    
    

    
    
        
