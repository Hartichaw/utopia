#:kivy 1.11.1
UtopiaGame:
<EmptyRoom@Room>
    size_hint: None, None
    width: "100dp"
    height: "100dp"
<Room>
    size_hint: None, None
    width: "100dp"
    height: "100dp"
<Cafeteria>
    text: "Food"
    on_press: app.root.top_bar.add_food(5)
<Well>
    text: "Water"
    on_press: app.root.top_bar.add_water(5)
<Generator>
    text: "Magic"
    on_press: app.root.top_bar.add_magic(5)
    
<TopBar@BoxLayout>
    size_hint: 1, .1
    orientation: 'horizontal'
    food_lbl: Food
    water_lbl: Water
    magic_lbl: Magic
    money_lbl: Money
    
    Label:
        id: Food
        text: "Food = 0"
    Label:
        id: Water
        text: "Water = 0"
    Label:
        id: Magic
        text: "Magic = 0"
    Label:
        id: Money
        text: "Money = 0"
    
<BuildView@ScrollView>
    build_area: build_area_id
    BuildArea:
        id: build_area_id
    
<BuildArea@GridLayout>
    cols: 4
    size_hint: None, None
    height: self.minimum_height
    width: self.minimum_width

<RoomSelection@ScrollView>
    do_scroll_y: False
    size_hint: 1, 0.2
    GridLayout:
        cols: 4    
        
        Button:
            text: "Cafeteria"
            on_press:app.root.build_view.build_area.build("Cafeteria")
        Button:
            text: "Well"
            on_press: app.root.build_view.build_area.build("Well")
        Button:
            text: "Magic"
            on_press: app.root.build_view.build_area.    build("Generator")
  
        
<UtopiaGame@BoxLayout>:  
    orientation: 'vertical'
    top_bar:top_bar_id
    #build_area:build_area_id
    build_view: build_view_id
    
    TopBar:
        id: top_bar_id
    BuildView:
        id: build_view_id
    RoomSelection:
 #       id: room_selection_id

    
    

    
    
        
